model Orders {
  id             String      @id @default(cuid())
  userId         String
  totalAmount    Float 
  subTotalAmount Float
  vat            Int?
  discount       Int?
  discountType   DiscountType? @default(NO_DISCOUNT) 
  addressId      String
  isDeleted      Boolean @default(false)
  status         OrderStatus @default(PENDING)
  createdAt      DateTime?   @default(now())
  updateAt       DateTime?   @updatedAt

  Address    Address      @relation(fields: [addressId], references: [id])
  OrderItem  OrderItem[]
  Payments   Payments[]
  Deliveries Deliveries[]
}



model OrderItem {
  id          String    @id @default(cuid())
  productName String
  categoryId  String
  orderId     String
  productId   String
  sellerId  String?
  quantity    Int
  price        Float
  discountPrice Float?
  createdAt DateTime? @default(now())
  updateAt  DateTime? @updatedAt

  Orders Orders @relation(fields: [orderId], references: [id])
}

enum OrderStatus {
  PENDING
  SHIPPING
  DELIVERED
  RETURNED
  EXPIRED
  CANCELLED
}

enum DiscountType {
  NO_DISCOUNT
  CODE
  YEARLY
  MEMBERSHIP
}