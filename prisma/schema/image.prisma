model Images {
  image_id     Int    @id @default(autoincrement())
  image_url    String
  imageble_id  Int
  imageble_type String

  // Relation to Product
  Product      Product? @relation(fields: [imageble_id], references: [id], map: "Images_Product_fkey")

  // Relation to Comment
  Comment      Comment? @relation(fields: [imageble_id], references: [id], map: "Images_Comment_fkey")

  // Relation to Reviews
  Reviews      Reviews? @relation(fields: [imageble_id], references: [id], map: "Images_Reviews_fkey")
}
