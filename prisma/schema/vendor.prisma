model Vendor {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  description   String
  sellerId      Int      @unique
  status        String
  rating        Float
  phoneNumber   String   @map("phone_number")
  password      String
  address       String
  totalProduct  Int      @map("total_product")
  totalReviews  Int      @map("total_reviews")
  logo          String
  fbLink        String   @map("fb_link")
  twitterLink   String   @map("twitter_link")
  instagramLink String   @map("instragram_link")

  Seller        Seller   @relation(fields: [sellerId], references: [id])
  Product Product[]
}