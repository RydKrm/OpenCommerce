{
  "product": {
    "url": "http://product_service:3000/api",
    "routes": [
      {
        "path": "v1/product/basic/create",
        "method": ["POST"],
        "middlewares": ["upload"],
        "role": ["seller"],
        "uploadFolder": "products"
      },
      {
        "path": "v1/product/basic/create-v2",
        "method": ["POST"],
        "middlewares": ["upload"],
        "role": ["seller"],
        "uploadFolder": "products"
      },
      {
        "path": "v1/product/basic/update/:productId",
        "method": ["PATCH"],
        "middlewares": [],
        "role": ["seller "]
      },
      {
        "path": "v1/product/basic/update-status/:productId",
        "method": ["PATCH"],
        "middlewares": ["auth"],
        "role": ["seller", "admin"]
      },
      {
        "path": "v1/product/basic/list",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/details/:productId",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/by-slug/:slug",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/delete/:productId",
        "method": ["DELETE"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/get-all-by-category/:categoryId",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/get-all-by-vendor/:vendorId",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/search",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/related-products/:productId",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path": "v1/product/basic/featured/list",
        "method": ["GET"],
        "middlewares": []
      },
      {
        "path" : "v1/product/basic/update-featured/:productId",
        "method": ["PATCH"],
        "middlewares": ["auth"],
        "role": ["user", "seller"]
      }
    ]
  }
}
